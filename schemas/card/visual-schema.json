{
  "description": "Lb-Caroursel visual schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ThemeType": {
      "type": "object",
      "properties": {
        "className": {
          "type": "string"
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  },
  "type": "object",
  "allOf": [
    {
      "properties": {
        "ns": {
          "type": "string",
          "pattern": "[\\w-]+"
        },
        "theme": {
          "$ref": "#/definitions/ThemeType"
        }
      }
    },
    {
      "oneOf": [
        {
          "properties": {
            "contentKeys": {
              "type": "array",
              "items": {
                "$ref": "../content-key-schema.json#/definitions/ContentKey"
              }
            }
          }
        },
        {
          "properties": {
            "contentKey": {
              "$ref": "../content-key-schema.json#/definitions/ContentKey"
            }
          }
        }
      ]
    }
  ]
}